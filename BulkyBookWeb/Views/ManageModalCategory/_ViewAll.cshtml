@model IEnumerable<BulkyBookWeb.Models.Category>
@{
    ViewBag.Title = "I am Abid ";
}
<h1 class="text-center"><i class="fas fa-comments-dollar text-success"></i> Category History</h1>


<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Displayorder)
            </th>
            
            <th>
                <a onclick="showInPopup('@Url.Action("AddorEdit","ManageModalCategory",null,Context.Request.Scheme)','New Category')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Cateogry</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Displayorder)
                </td>
                
                <td>
                    <div>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","ManageModalCategory",new {id=item.Id},Context.Request.Scheme)','Update Category')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger"/>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{ 
    <script src="~/js/CustomScripts.js"></script>
}
