@model CreateCategoryViewModel
<div class="Modal fade" id="AddCategory">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4  class="modal-title" id="AddCategoryLabel">Add Category</h4>
                <button type="button" class="close" data-dismiss="modal" >
                    <span>X</span>
                </button>
                </div>
            <div class = "modal-body">
                <form action ="Create">
                    <div class = "form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class = "form-group">
                        <label asp-for="Displayorder" class="control-label"></label>
                        <input asp-for="Displayorder" class="form-control" />
                        <span asp-validation-for="Displayorder" class="text-danger"></span>
                    </div>
                </form></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" style="width:150px" data-save="modal">Create</button>
                <button type="button" class="btn btn-primary" style="width:150px" data-dismiss="modal">Close</button>

                
            </div>
        </div>
    </div>
</div>
