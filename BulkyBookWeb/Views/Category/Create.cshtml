@model BulkyBookWeb.ViewModels.CreateCategoryViewModel

@{
    ViewData["Title"] = "Create";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
             <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Displayorder" class="control-label"></label>
            <input asp-for="Displayorder" class="form-control" />
             <span asp-validation-for="Displayorder" class="text-danger"></span>
        </div>
         
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>

    </div>
</form>
